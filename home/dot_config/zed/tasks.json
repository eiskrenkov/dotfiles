// Static tasks configuration.
[
  {
    "label": "Open Latest Rails Migration",
    "command": "zed $(find db/migrate -type f | sort -r | head -n 1)",
    "reveal": "never",
    "hide": "on_success"
  },
  {
    "label": "Open current project in Sublime Merge",
    "command": "smerge .",
    "reveal": "never",
    "hide": "on_success"
  },
  {
    "label": "Open current file history in Sublime Merge",
    "command": "smerge search 'file:\"$ZED_FILE\"'",
    "reveal": "never",
    "hide": "on_success"
  },
  {
    "label": "Lookup RSpec file for the current file",
    "command": "zed $(echo \"$ZED_FILE\" | sed -E 's#^(.*/)?app/#\\1spec/#; s#\\.rb$#_spec.rb#')",
    "reveal": "never",
    "hide": "never"
  }
]
